rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /decks/{document=**} {
    	allow read: if request.auth.uid != null && (resource.data.public || resource.data.owner.uid == request.auth.uid);
      allow write: if request.auth.uid != null && ((resource.data.public && !resource.data.readOnly) || resource.data.owner.uid == request.auth.uid);
    }
    match /games/{document=**} {
      allow read, write: if request.auth.uid != null;
    }
  }
}